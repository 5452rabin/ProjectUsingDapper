@model Assignment.Models.AddEmployeeVM
<div class="container">

<div class="w-100 border border-1 rounded-1  justify-content-center m-2 p-5">
        <form asp-action="AddEmployee" asp-controller="Home" class="w-100">
            <input hidden asp-for="@Model.EmployeeId"  class="form-control w-50" />
            <div class="form-group">
                <label asp-for="@Model.Name" class="form-label"></label>
                <input asp-for="@Model.Name" class="form-control w-50" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="@Model.Salary" class="form-label"></label>
                <input asp-for="@Model.Salary" class="form-control w-50" type="number" />
                <span asp-validation-for="@Model.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId" class="form-label">Department</label>
                <select asp-for="DepartmentId" class="form-control w-50" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))">
                    <option> Select Department </option>
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="@Model.DateofJoining" class="form-label"></label>
                <input asp-for="@Model.DateofJoining" class="form-control w-50" />
                <span asp-validation-for="@Model.DateofJoining" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
    </form>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}